@model Blog.Models.Post

@{
    ViewData["Title"] = "Edit Post";
    Layout = "_Layout";
}

<div class="container mt-4">
    <div class="card shadow">
        <div class="card-header bg-primary text-white">
            <h2 class="mb-0">
                <i class="fas fa-edit me-2"></i>@ViewData["Title"]
            </h2>
        </div>
        <div class="card-body">
            <form asp-action="Edit" class="needs-validation" novalidate>
                <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
                <input type="hidden" asp-for="Id" />

                <div class="row g-3">
                    <div class="col-md-12">
                        <div class="form-floating mb-3">
                            <input asp-for="Title" class="form-control" placeholder=" " required />
                            <label asp-for="Title" class="form-label"></label>
                            <span asp-validation-for="Title" class="text-danger small"></span>
                        </div>
                    </div>

                    <div class="col-md-12">
                        <div class="form-floating mb-3">
                            <textarea asp-for="Content" class="form-control" placeholder=" "
                                      style="height: 200px" required></textarea>
                            <label asp-for="Content" class="form-label"></label>
                            <span asp-validation-for="Content" class="text-danger small"></span>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="form-floating mb-3">
                            <input asp-for="Author" class="form-control" placeholder=" " required />
                            <label asp-for="Author" class="form-label"></label>
                            <span asp-validation-for="Author" class="text-danger small"></span>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="form-floating mb-3">
                            <input asp-for="CreatedAt" class="form-control" type="datetime-local" />
                            <label asp-for="CreatedAt" class="form-label"></label>
                            <span asp-validation-for="CreatedAt" class="text-danger small"></span>
                        </div>
                    </div>
                </div>

                <div class="d-flex justify-content-between mt-4">
                    <a asp-action="Index" class="btn btn-outline-secondary">
                        <i class="fas fa-arrow-left me-1"></i> Back to List
                    </a>
                    <button type="submit" class="btn btn-success">
                        <i class="fas fa-save me-1"></i> Save Changes
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
