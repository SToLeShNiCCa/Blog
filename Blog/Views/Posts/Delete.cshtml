@model Blog.Models.Post

@{
    ViewData["Title"] = "Delete Post";
    Layout = "_Layout";
}

<div class="container mt-4">
    <div class="card shadow-sm border-danger">
        <div class="card-header bg-danger text-white">
            <h2 class="mb-0">
                <i class="fas fa-exclamation-triangle me-2"></i>@ViewData["Title"]
            </h2>
        </div>
        <div class="card-body">
            <h3 class="text-danger mb-4">
                <i class="fas fa-question-circle me-2"></i>Are you sure you want to delete this?
            </h3>

            <div class="alert alert-warning">
                <h5 class="alert-heading">
                    <i class="fas fa-info-circle me-2"></i>This action cannot be undone!
                </h5>
                <p class="mb-0">All post data will be permanently removed from the system.</p>
            </div>

            <div class="post-details p-4 border rounded bg-light">
                <div class="row mb-3">
                    <div class="col-md-6">
                        <div class="d-flex align-items-center mb-3">
                            <i class="fas fa-heading fa-lg me-2 text-secondary"></i>
                            <div>
                                <h5 class="mb-0 text-muted">Title</h5>
                                <p class="mb-0 fs-5">@Model.Title</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="d-flex align-items-center mb-3">
                            <i class="fas fa-user-circle fa-lg me-2 text-secondary"></i>
                            <div>
                                <h5 class="mb-0 text-muted">Author</h5>
                                <p class="mb-0 fs-5">@Model.Author</p>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="mb-3">
                    <h5 class="text-muted mb-2">
                        <i class="fas fa-calendar-alt me-2"></i>Created At
                    </h5>
                    <p class="fs-5">@Model.CreatedAt.ToString("MMMM dd, yyyy HH:mm")</p>
                </div>

                <div class="content-box p-3 border rounded bg-white">
                    <h5 class="text-primary mb-2">
                        <i class="fas fa-align-left me-2"></i>Content Preview
                    </h5>
                    <div class="post-content">
                        @Html.Raw(Model.Content.Replace("\n", "<br>"))
                    </div>
                </div>
            </div>

            <form asp-action="Delete" class="mt-4">
                <input type="hidden" asp-for="Id" />
                <div class="d-flex justify-content-between">
                    <a asp-action="Index" class="btn btn-outline-secondary">
                        <i class="fas fa-arrow-left me-1"></i> Back to List
                    </a>
                    <button type="submit" class="btn btn-danger"
                            onclick="return confirm('Are you absolutely sure you want to delete this post?')">
                        <i class="fas fa-trash-alt me-1"></i> Confirm Delete
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>